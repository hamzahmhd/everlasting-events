datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  role     String    @default("client")
  bookings Booking[]
}

model Booking {
  id               Int      @id @default(autoincrement())
  eventType        String
  eventDate        DateTime
  consultationDate DateTime
  location         String
  budget           Float
  description      String? // Optional description field
  userId           Int
  User             User     @relation(fields: [userId], references: [id])
  status           String? // Can be "pending", "approved", or "rejected"
  reason           String? // Reason for approval/rejection
  phoneNumber      String // Now required
}
